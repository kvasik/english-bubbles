<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@drawable/background"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:layout_width="80dp"
        android:layout_height="40dp"
        android:layout_marginLeft="32dp"
        android:alpha="0"
        android:layout_marginTop="25dp"
        android:id="@+id/back"
        />

    <Button
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:text="Prepositions"
        android:textColor="#ffffff"
        android:layout_marginTop="30dp"
        android:id="@+id/btn1"
        android:background="@drawable/btn"
        android:layout_gravity="center_horizontal" />

    <Button
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:text="Mixed Conditional"
        android:textColor="#ffffff"
        android:layout_marginTop="20dp"
        android:id="@+id/btn2"
        android:background="@drawable/btn"
        android:layout_gravity="center_horizontal" />

    <Button
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:text="Tenses of verbs"
        android:textColor="#ffffff"
        android:layout_marginTop="20dp"
        android:id="@+id/btn3"
        android:background="@drawable/btn"
        android:layout_gravity="center_horizontal" />

    <Button
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:text="Possesive Case"
        android:textColor="#ffffff"
        android:layout_marginTop="20dp"
        android:id="@+id/btn4"
        android:background="@drawable/btn"
        android:layout_gravity="center_horizontal" />

    <Button
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:text="Quantitative and ordinal numbers"
        android:textColor="#ffffff"
        android:layout_marginTop="20dp"
        android:id="@+id/btn5"
        android:background="@drawable/btn"
        android:layout_gravity="center_horizontal" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="170dp"
        android:gravity="center"
        android:textColor="#9b9b9b"
        android:text="To open a page you need the Internet"
        android:id="@+id/textView5"
        android:layout_gravity="right" />

</LinearLayout>